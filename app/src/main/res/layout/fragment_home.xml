<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/user1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_baseline_attach_money_24"
            android:id="@+id/img1"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:text="Halo, Yeon su"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/btn_tips"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lonceng"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="200dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/user1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/dompet_bar"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:drawableEnd="@drawable/pensil"
            android:paddingEnd="20dp"
            android:text="Dompet"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:paddingEnd="20dp"
            android:text="Aset Bersih"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_aset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:paddingEnd="20dp"
            android:text="Rp. 0"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:src="@drawable/bar" />

        <TextView
            android:id="@+id/tv_pendapatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:paddingEnd="20dp"
            android:text="dari Rp.0"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>





</RelativeLayout>